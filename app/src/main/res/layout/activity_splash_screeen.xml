<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:weightSum="6"
        tools:context=".minesweeper.SplashScreeen">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:gravity="center"
            android:text="@string/minesweeper"
            android:layout_weight="1"
            android:textColor="#5B89DA"
            android:fontFamily="@string/font_style"
    />

    <ImageView

            android:layout_weight="3"
            android:layout_width="300sp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/splash"/>

    <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="2"

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

        <Button
            android:id="@+id/btnEasy"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Easy"

            android:textColor="@color/easy"
            android:background="@color/btnBackgroundColor"/>

        <Button
            android:id="@+id/btnMedium"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textColor="@color/medium"
            android:background="@color/btnBackgroundColor"

        />
        <Button
            android:id="@+id/btnHard"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:textColor="@color/hard_color"
            android:background="@color/btnBackgroundColor"
            android:text="Hard"/>

    </LinearLayout>

</LinearLayout>